
function գտնելՄեծագույնըԻնդեքսը(զանգված) {
    let մեծագույնԱրժեք = զանգված[0];
    let մեծագույնԻնդեքս = 0;

    for (let i = 1; i < զանգված.length; i++) {
        if (զանգված[i] > մեծագույնԱրժեք) {
            մեծագույնԱրժեք = զանգված[i];
            մեծագույնԻնդեքս = i;
        }
    }

    return { արժեք: մեծագույնԱրժեք, ինդեքս: մեծագույնԻնդեքս };
}

// Օրինակ՝
const զանգված = [3, 6, 2, 8, 4, 10];//index սկսումա0-ից մինչև 5
//array.length 3,6,2,8,4,10
const մեծագույնըԻնդեքսով = գտնելՄեծագույնըԻնդեքսը(զանգված);
console.log("Մեծագույն արժեքը:", մեծագույնըԻնդեքսով.արժեք);
console.log("Ինդեքսը:", մեծագույնըԻնդեքսով.ինդեքս


//Մեծագույն արժեքը: 10
//Ինդեքսը: 5
