function findGreatestIndex(array) {
     let largestValue = array[0];
     let largestIndex = 0;

     for (let i = 1; i < array.length; i++) {
         if (array[i] > largestValue) {
             largestValue = array[i];
             largestIndex = i;
         }
     }

     return { value: largestValue, index. largestIndex };
}

// Example:
const array = [3, 6, 2, 8, 4, 10];//index starts from 0 to 5
//array.length 3,6,2,8,4,10
const largestByIndex = findGreatestIndex(array);
console.log("Largest value:", largestByIndex.value);
console.log("Index:", maxIndex.index


//Maximum value. 10:00
//The index. 5:00
